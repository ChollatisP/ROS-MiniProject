<?xml version="1.0"?>

<robot name = "Robot_Arm">

<!-- base link -->
<link name = "base_link"/>
<!-- link 1-->
<link name = "link1">
    <visual>
        <geometry>
            <box size="0.2 1 0.05"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>

    <collision>
        <geometry>
            <box size="0.2 1 0.05"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>

    <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="1"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
</link>

<!-- joint1 -->
<joint name="joint1" type="prismatic">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.075" rpy="1.56 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.4" upper="0.4" effort="100" velocity="1"/> 
</joint>

<!-- link 2-->
<link name = "link2">
    <visual>
        <geometry>
            <box size="0.2 1 0.05"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>

    <collision>
        <geometry>
            <box size="0.2 1 0.05"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>

    <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="1"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
</link>

<!-- joint2 -->
<joint name="joint2" type="prismatic">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 0.075" rpy="1.56 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.4" upper="0.4" effort="100" velocity="1"/> 
</joint>

</robot>